<Window x:Class="Zeiterfassung_Anleiter_WPF.AddAttendee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zeiterfassung_Anleiter_WPF"
        mc:Ignorable="d"
        Title="Teilnehmer hinzufügen"
        Height="423"
        Width="730"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height"
                    Value="18" />
            <Setter Property="TextWrapping"
                    Value="NoWrap" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Height"
                    Value="26" />
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="372*" />
        </Grid.ColumnDefinitions>
        <Grid Height="170"
              Width="270"
              Margin="10,10"
              VerticalAlignment="Top"
              Grid.Column="0"
              ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="140" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="22" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
            </Grid.RowDefinitions>
            <Label Content="Nummer:"
                   Grid.Column="0"
                   Grid.Row="0"
                   Width="Auto" />
            <ComboBox x:Name="attendeeNumber"
                      Grid.Column="1"
                      Grid.Row="0"
                      HorizontalAlignment="Left"
                      SelectedIndex="0"
                      Width="Auto"
                      IsReadOnly="True" />
            <Label Content="Name: "
                   Grid.Column="0"
                   Grid.Row="1"
                   Width="Auto" />
            <TextBox x:Name="lastname"
                     Grid.Column="1"
                     Grid.Row="1"
                     Width="Auto"/>
            <Label Content="Vorname: "
                   Grid.Column="0"
                   Grid.Row="2"
                   Width="Auto" />
            <TextBox x:Name="firstname"
                     Grid.Column="1"
                     Grid.Row="2"
                     Width="Auto" />
            <Label Content="Passwort:"
                   Grid.Column="0"
                   Grid.Row="3"
                   Width="Auto" />
            <TextBox x:Name="passwd"
                     Grid.Column="1"
                     Grid.Row="3"
                     Width="Auto" />
        </Grid>
        <DatePicker x:Name="BeginMeasure"
                    HorizontalAlignment="Left"
                    Margin="193,28,0,0"
                    VerticalAlignment="Top"
                    Width="133"
                    Grid.Column="1"
                    Height="24"
                    FirstDayOfWeek="Monday" />
        <Label Grid.Column="1"
               Content="Anfang (Massnahme)"
               HorizontalAlignment="Left"
               Margin="53,28,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.503,0.29"
               Width="122" />
        <Label Grid.Column="1"
               Content="Ende (Massnahme)"
               HorizontalAlignment="Left"
               Margin="53,57,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.503,0.29"
               Width="110" />
        <DatePicker x:Name="EndMeasure"
                    HorizontalAlignment="Left"
                    Margin="193,58,0,0"
                    VerticalAlignment="Top"
                    Width="133"
                    Grid.Column="1"
                    Height="24" />
        <ComboBox x:Name="condition"
                  HorizontalAlignment="Left"
                  Margin="146,209,0,0"
                  VerticalAlignment="Top"
                  Width="48"
                  Height="22" />
        <Label Content="Schicht:"
               HorizontalAlignment="Left"
               Margin="37,207,0,0"
               VerticalAlignment="Top"
               Width="63" />
        <TextBox x:Name="beginWork"
                 HorizontalAlignment="Left"
                 Margin="146,257,0,0"
                 VerticalAlignment="Top"
                 Width="68"
                 Text="08:30" />
        <TextBox x:Name="endWork"
                 HorizontalAlignment="Left"
                 Margin="146,283,0,0"
                 Text="14:30"
                 VerticalAlignment="Top"
                 Width="68" />
        <Label Content="Anfang:"
               HorizontalAlignment="Left"
               Margin="37,253,0,0"
               VerticalAlignment="Top"
               Width="63" />
        <Label Content="Ende:"
               HorizontalAlignment="Left"
               Margin="37,279,0,0"
               VerticalAlignment="Top"
               Width="63" />
        <TextBox x:Name="summaryDay"
                 HorizontalAlignment="Left"
                 Margin="146,309,0,0"
                 Text="06:00"
                 VerticalAlignment="Top"
                 Width="68" />
        <Label Content="Gesamt (Tag):"
               HorizontalAlignment="Left"
               Margin="37,305,0,0"
               VerticalAlignment="Top"
               Width="85" />
        <TextBox x:Name="workDays"
                 Grid.Column="1"
                 HorizontalAlignment="Left"
                 Margin="193,103,0,0"
                 VerticalAlignment="Top"
                 Width="120"
                 Text="5" />
        <Label Grid.Column="1"
               Content="Arbeitstage (Woche)"
               HorizontalAlignment="Left"
               Margin="54,99,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.503,0.29"
               Width="121" />
        <Button x:Name="nextAttendee"
                Content="Nächster"
                HorizontalAlignment="Left"
                Margin="229,352,0,0"
                VerticalAlignment="Top"
                Width="62"
                Grid.Column="1"
                Click="nextAttendee_Click" />
        <Button x:Name="doneAdd"
                Grid.Column="1"
                Content="Fertig"
                HorizontalAlignment="Left"
                Margin="315,352,0,0"
                VerticalAlignment="Top"
                Click="doneAdd_Click"
                Width="62" />
    </Grid>
</Window>
