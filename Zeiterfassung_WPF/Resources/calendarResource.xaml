<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Zeiterfassung_WPF">

    <DataTemplate x:Key="CalendarTemplate">
        <Border BorderBrush="Black"
                BorderThickness="0">
            <Grid Height="70"
                  Width="150">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="MonthNameTest"
                           Grid.Row="0"
                           Text="{Binding Path=MonthName}"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           FontSize="16"
                           Background="Black"
                           Foreground="Green" />
                <Grid x:Name="ComingGoing"
                      Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="75" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Coming"
                               Grid.Column="0"
                               Text="Login 08:30"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               FontSize="16"
                               Background="OrangeRed"
                               Foreground="Black" />
                    <TextBlock x:Name="Going"
                               Grid.Column="1"
                               Text="Logout 14:30"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               FontSize="16"
                               Background="OrangeRed"
                               Foreground="Black" />
                </Grid>
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="TestGrid">
        <Label Content="Hallo" />
    </DataTemplate>
</ResourceDictionary>