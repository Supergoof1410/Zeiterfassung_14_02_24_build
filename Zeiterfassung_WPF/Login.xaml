<Window x:Class="Zeiterfassung_WPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zeiterfassung_WPF"
        mc:Ignorable="d"
        Title="Login"
        Height="245"
        Width="220"
        ResizeMode="NoResize"
        Icon="/key-chain.png"
        WindowStartupLocation="CenterScreen"
        BorderBrush="White"
        WindowStyle="None"
        Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Padding"
                    Value="0,0,0,0" />
            <Setter Property="Height"
                    Value="Auto" />
            <Setter Property="FontSize"
                    Value="15" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="Height"
                    Value="23,95" />
            <Setter Property="Padding"
                    Value="0,0,0,0" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="Green" />
        </Style>
    </Window.Resources>
    <DockPanel HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Height="Auto">
        <Grid DockPanel.Dock="Top"
              Margin="0,5,0,0"
              Width="193">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="97*" />
                <ColumnDefinition Width="83*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Image HorizontalAlignment="Left"
                   Height="Auto"
                   VerticalAlignment="Center"
                   Width="193"
                   Source="/SplashScreen.png"
                   Grid.ColumnSpan="2" />
            <TextBlock Grid.Row="1"
                       Margin="0,10,0,10"
                       Text="Zeiterfassung"
                       Grid.ColumnSpan="2"></TextBlock>
        </Grid>
        <Grid Margin="0,0,0,0"
              DockPanel.Dock="Bottom"
              Height="120"
              Width="194">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45*" />
                <ColumnDefinition Width="149*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label x:Name="lblLoginError"
                   Content="Error"
                   Grid.Row="2"
                   Margin="0,98,0,0"
                   VerticalContentAlignment="Center"
                   HorizontalContentAlignment="Center"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="194"
                   FontFamily="Calibri"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#FFF90532"
                   Padding="0,0,0,0"
                   Grid.ColumnSpan="2" />
            <ComboBox x:Name="cbAttendeeList"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Grid.Row="2"
                      Margin="0,37,0,0"
                      SelectionChanged="cbAttendeeList_SelectionChanged"
                      Width="78"
                      IsReadOnly="True"
                      Grid.ColumnSpan="2" />
            <Button x:Name="btnLogin"
                    Content="Login"
                    Grid.Row="2"
                    Margin="0,66,0,0"
                    VerticalAlignment="Top"
                    Height="22"
                    Width="78"
                    HorizontalAlignment="Left"
                    IsEnabled="False"
                    Click="btnLogin_Click"
                    Grid.ColumnSpan="2" />
            <PasswordBox x:Name="txtPass"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Top"
                         Width="98"
                         Height="22"
                         FontFamily="Calibri"
                         MaxLength="20"
                         Padding="0,2,0,0"
                         Margin="0,37,0,0"
                         Grid.Row="2"
                         KeyDown="txtPass_KeyDown"
                         Grid.Column="1" />
            <Button x:Name="btnExit"
                    Content="Schliessen"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Height="22"
                    Width="98"
                    Grid.Row="2"
                    Margin="0,66,0,0"
                    Click="btnExit_Click"
                    Grid.Column="1" />
            <Label Content="Teilnehmer"
                   HorizontalAlignment="Left"
                   Margin="0,10,0,0"
                   VerticalAlignment="Top"
                   Grid.Row="2"
                   Width="78"
                   Grid.ColumnSpan="2" />
            <Label Content="Passwort"
                   HorizontalAlignment="Left"
                   Margin="51,10,0,0"
                   VerticalAlignment="Top"
                   Grid.Row="2"
                   Width="98"
                   Grid.Column="1" />
        </Grid>
    </DockPanel>
</Window>
